# These variables will be overridden by Render's environment variables
PORT=10000
NODE_ENV=production

# These are placeholders that will be filled by Render's database connection info
DB_HOST=${DB_HOST}
DB_PORT=${DB_PORT}
DB_NAME=${DB_NAME}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}

# Set a strong JWT secret in the Render dashboard
JWT_SECRET=${JWT_SECRET}

# Frontend URL for CORS
FRONTEND_URL=https://flashcard-web.onrender.com
